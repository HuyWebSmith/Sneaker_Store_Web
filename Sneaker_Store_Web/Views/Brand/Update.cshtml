@model Sneaker_Store_Web.Models.Brand
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit Product";
}
<h2 class="mb-5">Edit Brand</h2>
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BrandId" />
    <div class="form-group">
        <label asp-for="BrandName"></label>
        <input asp-for="BrandName" class="form-control" />
        <span asp-validation-for="BrandName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3 ">
        <label asp-for="ImageUrl">Brand Image</label>
        <input type="file" name="ImageFile" class="form-control object-fit-cover" id="imageInput" />
        
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <button asp-action="Index" class="btn btn-secondary">Back to List</button>
</form>
<div class="col-8">
    <img src="@Model.ImageUrl" alt="Product Image" style="max-width:200px;"
         id="previewImage" />
</div>

<script>

    document.querySelectorAll('input[type="file"]').forEach(input => {
        input.addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.getElementById("previewImage")
                    img.src = e.target.result
                };
                reader.readAsDataURL(file);
            }
        });
    });
</script>